[user]
  email = eloi@perdereau.eu
  name = Eloi Perdereau

[core]
  editor = vim
  excludesfile = ~/.gitignore

[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  whitespace = red reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  st = status
  co = checkout
  br = branch
  sl = shortlog
  pl = log --oneline --date=short --decorate --graph
  hist = log --pretty='%C(yellow)%h %C(green)%ad%C(auto)%d %C(reset)%s %C(cyan)[%an]' --graph --date=short --all
